[alias]
	# Command Alias
	s = status
	l = log --graph --oneline
	a = add
	c = commit --verbose
	d = diff
	p = push 
	fp = push --force-with-lease
	P = pull
	co = checkout
	b = branch

[init]
	defaultBranch = main

[pull]
	ff = only

[push]
	default = simple

[branch]
	sort = -committerdate

[rerere]
	enabled = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true    # use n and N to move between diff sections
	side-by-side = true

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[includeIf "gitdir:/home/kyle/"]
	path = ~/.config/git/config-personal

[includeIf "gitdir:/home/kc/"]
	path = ~/.config/git/config-work
