[alias]
	# Command Alias
	s = status
	l = log --graph --oneline
	a = add
	c = commit --verbose
	d = diff
	p = push 
	fp = push --force-with-lease
	P = pull
	co = checkout
	b = branch
	fix = !"git c --fixup=$(git-commit-select-interactive)"

[init]
	defaultBranch = main

[pull]
	ff = only

[push]
	default = simple

[branch]
	sort = -committerdate

[rerere]
	enabled = true

[includeIf "gitdir:/home/kyle/"]
	path = ~/.config/git/config-personal

[includeIf "gitdir:/home/kc/"]
	path = ~/.config/git/config-work
